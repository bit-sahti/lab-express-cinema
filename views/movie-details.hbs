<main>
    <a href="/movies">Go back</a>

    <div>
        <img src="{{movie.image}}" alt="{{movie.title}} poster">
    </div>

    <div>
        <h1>{{movie.title}}</h1>
        <h2>{{movie.director}}</h2>
        <h3>Stars</h3>
        <ul>
            {{#each movie.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <p>
            {{#each movie.showtimes}}
                <span>{{this}} |</span>
            {{/each}}
        </p>
    </div>
</main>